{% extends('base.html.twig') %}

{% block title %} Terminologio - Home {% endblock %}

{% block body %}
    {% block navigation %}{{ parent() }}{% endblock %}
    <div class="flex flex-col min-h-screen">
        <div class="flex flex-grow flex-col overflow-y-hidden" style="background: linear-gradient(90deg, #667eea 0%, #764ba2 100%)"
        >
                <div class="flex flex-1 flex-col items-center justify-center px-4 text-center">
                    <h2 class="text-4xl font-bold mb-2 text-white">
                        Terminologio
                    </h2>
                    <h3 class="text-2xl mb-8 text-gray-200">
                        Create and edit your own concept, organize it by category and let everyone contribute to it !
                    </h3>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_admin') }}">
                            <button class="bg-white font-bold rounded-full py-4 px-8 shadow-lg uppercase tracking-wider">
                                Manage your website
                            </button>
                        </a>
                    {% else %}
                        <a href="{{ path('app_concept_upload') }}">
                            <button class="bg-white font-bold rounded-full py-4 px-8 shadow-lg uppercase tracking-wider">
                                Try it now
                            </button>
                        </a>
                    {% endif %}
                </div>
        </div>
    </div>
{% endblock %}
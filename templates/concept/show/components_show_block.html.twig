{% for componentName in components %}
    <div id="componentEdit{{ componentName.number }}" class=" py-3 place-items-center w-full">
        <label class="ml-6 grid grid-cols-2">
            <span class="font-bold text-center">Component {{ componentName.number }} :</span>
            <input name='componentText{{ componentName.number }}'
                   class='rounded bg-[#f3e8ff] mx-auto componentText'
                   type="text"
                   value="{% if componentName.name == "" %}Component{{ componentName.number }}{% else %}{{ componentName.name }}{% endif %}"
                   readonly>
        </label>
    </div>
{% endfor %}
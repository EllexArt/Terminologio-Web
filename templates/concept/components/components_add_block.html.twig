{% for component in components %}
<div id="componentEdit{{ component.number }}" class="grid grid-cols-2 py-3 place-items-center w-full">
    {% include('concept/components/component_edit_name_block.html.twig') %}
    <button type="button" class="bg-red-500 hover:bg-red-700 shadow-lg text-white text-center font-bold py-2 px-5 w-fit rounded-full"
            {{ stimulus_action('component', 'deleteComponent', 'click',
    {id:component.id, number:component.number}) }}>Delete</button>
</div>
{% endfor %}
{% for component in concept.components %}
    <div id="componentNumber{{ component.number }}" style="
        width: 2vw;
        height: 2vw;
        position: absolute;
        top: calc({{ component.positionY }}% - 1vw);
        left: calc({{ component.positionX }}% - 1vw);
            pointer-events: none;
        ">
        <svg width="100%" height="100%">
            <ellipse rx="45%" ry="45%" cx="50%" cy="50%" fill="white" stroke="black"></ellipse>
            <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle">{{ component.number }}</text>

        </svg>
    </div>
{% endfor %}
{% extends 'base.html.twig' %}

{% block title %}Edit components' concept !{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
    {% for component in components %}
    .image{{ component.number}} {
        position: absolute;
        top: {{ component.positionY }}%;
        left: {{ component.positionX }}%;
    }
    {% endfor %}
    </style>
{% endblock stylesheets %}

{% block body %}
    <div class="flex flex-col h-screen">
        <div class="m-8">
            <h1 class="text-2xl font-bold text-center text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Edit your concept</h1>
        </div>
        <div class="flex flex-grow justify-center items-center">
            <div class="flex flex-row size-3/4 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 align-middle">
                <button class="relative"{{ stimulus_controller('component', {
                    url: path('app_concept_component_edit', {
                        title:concept.title
                    })
                })
                }}{{ stimulus_action('component', 'addComponent', 'click') }}>
                    <img src="{{ asset(imagePath) }}" alt="concept-image" class="h-full"/>
                    {% for component in components %}
                    <p class="image{{ component.number }}">
                        {{ component.number }}
                    </p>
                    {% endfor %}
                </button>
                <div class="mr-8 mb-8 ml-8">
                    <h2>Components : </h2>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
